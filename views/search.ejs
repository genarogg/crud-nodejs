<!DOCTYPE html>
<html lang="es">
  <%- include('./layout/head'); %>

  <body>
    <%- include('./layout/nav'); %>
    <br />
    <div class="row container centered" width="100vw">
      <div class="text-center">
        <h2>Busca por "<%= search %>"</h2>
      </div>
      <br />
      <br />
      <br />
      <table class="table table-hover">
        <thead>
          <%- include('./layout/tableHover'); %>
        </thead>
        <tbody>
          <% users.forEach(function(user) { %>
          <tr>
            <td><%= user.username %></td>
            <td><%= user.email %></td>
            <td><%= user.telefono %></td>
            <td><%= user.ciudad %></td>
            <td><%= user.estado %></td>
            <td>
              <%= user.created_at.toLocaleDateString() %> <%=
              user.created_at.toLocaleTimeString() %>
            </td>
            <td>
              <%= user.updated_at.toLocaleDateString() %> <%=
              user.updated_at.toLocaleTimeString() %>
            </td>
            <td>
              <div class="row">
                <div class="row">
                  <form action="./edit" method="GET">
                    <input type="hidden" name="id" value="<%= user.id %>" />
                    <button type="submit" class="btn edit-btn">
                      <i class="bi bi-pencil"></i>
                    </button>
                  </form>
                </div>
                <div class="row"></div>
                <div class="row">
                  <form action="./delete-user" method="POST">
                    <input type="hidden" name="id" value="<%= user.id %>" />
                    <button type="submit" class="btn delete-btn">
                      <i class="bi bi-trash"></i>
                    </button>
                  </form>
                </div>
              </div>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    <%- include('./layout/footer'); %>
  </body>
</html>
