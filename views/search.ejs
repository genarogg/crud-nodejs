<!DOCTYPE html>
<html lang="es">
  <%- include('./layout/head'); %>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container">
        <a class="navbar-brand" href="./"
          ><img src="img/icon.png" alt="Node.js icon" class="nav-icon"
        /></a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="./"
                >inicio</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="./add"
                >crear usuario</a
              >
            </li>
          </ul>
          <form class="d-flex" action="./search" method="GET">
            <input
              class="form-control me-2"
              type="search"
              placeholder="Buscar"
              aria-label="Buscar"
              name="search"
            />
            <button class="btn secondary-btn" type="submit">Buscar</button>
          </form>
        </div>
      </div>
    </nav>
    <br />
    <div class="row container centered" width="100vw">
      <div class="text-center">
        <h2>Busca por "<%= search %>"</h2>
      </div>
      <br />
      <br />
      <br />
      <table class="table table-hover">
        <thead>
          <table class="table table-hover">
            <thead>
              <th scope="col">Username</th>
              <th scope="col">Email</th>
              <th scope="col">Telefone</th>
              <th scope="col">Cidade</th>
              <th scope="col">Estado</th>
              <th scope="col">Criação</th>
              <th scope="col">Atualização</th>
              <th scope="col">Ações</th>
            </thead>
            <tbody>
              <% users.forEach(function(user) { %>
              <tr>
                <td><%= user.username %></td>
                <td><%= user.email %></td>
                <td><%= user.telefone %></td>
                <td><%= user.cidade %></td>
                <td><%= user.estado %></td>
                <td>
                  <%= user.created_at.toLocaleDateString() %> <%=
                  user.created_at.toLocaleTimeString() %>
                </td>
                <td>
                  <%= user.updated_at.toLocaleDateString() %> <%=
                  user.updated_at.toLocaleTimeString() %>
                </td>
                <td>
                  <div class="row">
                    <div class="row">
                      <form action="./edit" method="GET">
                        <input type="hidden" name="id" value="<%= user.id %>" />
                        <button type="submit" class="btn edit-btn">
                          <i class="bi bi-pencil"></i>
                        </button>
                      </form>
                    </div>
                    <div class="row"></div>
                    <div class="row">
                      <form action="./delete-user" method="POST">
                        <input type="hidden" name="id" value="<%= user.id %>" />
                        <button type="submit" class="btn delete-btn">
                          <i class="bi bi-trash"></i>
                        </button>
                      </form>
                    </div>
                  </div>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </thead>
        <tbody>
          <% users.forEach(function(user) { %>
          <tr>
            <td><%= user.username %></td>
            <td><%= user.email %></td>
            <td><%= user.telefono %></td>
            <td><%= user.ciudad %></td>
            <td><%= user.estado %></td>
            <td>
              <%= user.created_at.toLocaleDateString() %> <%=
              user.created_at.toLocaleTimeString() %>
            </td>
            <td>
              <%= user.updated_at.toLocaleDateString() %> <%=
              user.updated_at.toLocaleTimeString() %>
            </td>
            <td>
              <div class="row">
                <div class="row">
                  <form action="./edit" method="GET">
                    <input type="hidden" name="id" value="<%= user.id %>" />
                    <button type="submit" class="btn edit-btn">
                      <i class="bi bi-pencil"></i>
                    </button>
                  </form>
                </div>
                <div class="row"></div>
                <div class="row">
                  <form action="./delete-user" method="POST">
                    <input type="hidden" name="id" value="<%= user.id %>" />
                    <button type="submit" class="btn delete-btn">
                      <i class="bi bi-trash"></i>
                    </button>
                  </form>
                </div>
              </div>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    <%- include('./layout/footer'); %>
  </body>
</html>
