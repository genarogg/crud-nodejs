<!DOCTYPE html>
<html lang="es">
  <%- include('./layout/head'); %>

  <body>
    <%- include('./layout/nav'); %>
    <br />
    <div class="container">
      <div class="text-center">
        <h2>usuarios</h2>
      </div>
      <br />
      <form action="./edit-user" method="POST">
        <input type="hidden" name="id" value="<%= user.id %>" />
        <div class="row">
          <div class="col-12">
            <label for="username" class="form-label">Username</label>
            <input
              type="text"
              name="username"
              id="username"
              class="form-control"
              value="<%= user.username %>"
            />
          </div>
        </div>
        <br />
        <div class="row">
          <div class="col-6">
            <label for="email" class="form-label">Email</label>
            <input
              type="text"
              name="email"
              id="email"
              class="form-control"
              value="<%= user.email %>"
            />
          </div>
          <div class="col-6">
            <label for="telefone" class="form-label">Telefono</label>
            <input
              type="text"
              name="telefone"
              id="telefone"
              class="form-control"
              value="<%= user.telefone %>"
            />
          </div>
        </div>
        <br />
        <div class="row">
          <div class="col-6">
            <label for="cidade" class="form-label">Ciudad</label>
            <input
              type="text"
              name="cidade"
              id="cidade"
              class="form-control"
              value="<%= user.cidade %>"
            />
          </div>
          <div class="col-6">
            <label for="estado" class="form-label">Estado</label>
            <select name="estado" id="estado" class="form-select">
              <option value="<%= user.estado %>" selected>
                <%= user.estado %>
              </option>
              <%- include('./layout/options'); %>
            </select>
          </div>
        </div>
        <br />
        <div class="row">
          <div class="col-6">
            <div class="float-start">
              <button type="submit" class="btn primary-btn">
                Actualizar el usuario
              </button>
            </div>
          </div>
          <div class="col-6">
            <div class="float-end">
              <a href="./" class="btn secondary-btn">Volver al inicio</a>
            </div>
          </div>
        </div>
      </form>
    </div>
    <%- include('./layout/footer'); %>
  </body>
</html>
